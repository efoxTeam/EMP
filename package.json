{
  "name": "emp-workspace",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/efoxTeam/emp.git",
  "author": "ken <ckken@qq.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext js,ts,tsx --fix",
    "build": "pnpm build:pkg",
    "build:pkg": "pnpm run --filter=@efox/emp build && pnpm run --filter=@efox/*  --filter=!@efox/emp --parallel build",
    "dev:mf": "pnpm run --filter={micro-app,micro-host} --parallel dev",
    "docs:dev": "vitepress dev docs --host",
    "docs:build": "vitepress build docs",
    "docs:start": "vitepress serve docs --host",
    "prebuild": "[[ $CI = true ]] && npx pnpm@6 install -r --store=node_modules/.pnpm-store || echo skiping pnpm install"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^8.3.4",
    "@efox/eslint-config-react": "workspace:^2.0.0",
    "cross-env": "^7.0.3",
    "eslint-plugin-empproposal": "workspace:^0.0.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "typescript": "^4.4.4",
    "vitepress": "^0.20.1"
  }
}
